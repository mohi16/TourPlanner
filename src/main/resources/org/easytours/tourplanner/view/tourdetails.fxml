<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<VBox spacing="4.0" GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.rowIndex="2">
    <!--<VBox  GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.rowIndex="2">-->
    <VBox styleClass="vbox-vbox">
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </padding>
        <Label text="%TourDetails_Title" />
        <FlowPane>
            <ToggleButton text="%TourDetails_Route" />
            <ToggleButton text="%TourDetails_Description" />
        </FlowPane>
        <TextArea/>
    </VBox>
    <!--<VBox GridPane.columnIndex="2" GridPane.columnSpan="3" GridPane.rowIndex="3">-->
    <VBox styleClass="vbox-vbox">
        <padding>
            <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
        </padding>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="NEVER" />
            </columnConstraints>
            <Label text="%TourDetails_Logs" GridPane.columnIndex="0" />
            <Button text="+" GridPane.columnIndex="1"/>
            <Button text="-" GridPane.columnIndex="2"/>
            <Button text="[]" GridPane.columnIndex="3"/>
        </GridPane>
        <TableView>
            <columns>
                <TableColumn text="%TourDetails_Date"/>
                <TableColumn text="%TourDetails_Duration"/>
                <TableColumn text="%TourDetails_Distance"/>
                <TableColumn text="%TourDetails_ppp"/>
            </columns>
        </TableView>
    </VBox>
</VBox>

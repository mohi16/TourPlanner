<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.easytours.tourplanner.controller.AddTourController">

    <stylesheets>
        <URL value="@css/addtour.css"/>
    </stylesheets>

    <content>
        <VBox spacing="5.0">
            <Label text="%AddTour_Name" />
            <TextField fx:id="name" />
            <Label text="%AddTour_Description"/>
            <TextArea fx:id="description" />
            <Label text="%AddTour_From" />
            <TextField fx:id="from"/>
            <Label text="%AddTour_To"/>
            <TextField fx:id="to" />
            <!--<Label text="%AddTour_Distance" />
            <TextField fx:id="distance" />
            <GridPane hgap="5" vgap="5">
                <columnConstraints>
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="ALWAYS" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label GridPane.columnIndex="0" GridPane.rowIndex="0" text="%AddTour_EstTimeHours" />
                <TextField GridPane.columnIndex="0" GridPane.rowIndex="1" fx:id="estTimeHours" />
                <Label GridPane.columnIndex="1" GridPane.rowIndex="0" text="%AddTour_EstTimeMins" />
                <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="estTimeMins" />
                <Label GridPane.columnIndex="2" GridPane.rowIndex="0" text="%AddTour_EstTimeSecs" />
                <TextField GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="estTimeSecs" />
            </GridPane>-->
            <Label text="%AddTour_TransportType" />
            <TextField fx:id="transportType"/>
            <!--<ComboBox fx:id="transportType"/>-->
            <Label text="%AddTour_RouteInfo" />
            <TextField fx:id="routeInfo"/>
        </VBox>
    </content>

    <ButtonType text="%Dialog_OK" buttonData="OK_DONE"/>
    <ButtonType text="%Dialog_Cancel" buttonData="CANCEL_CLOSE"/>
</DialogPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.easytours.tourplanner.controller.SearchBarController" maxWidth="Infinity">

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS"/>
        <ColumnConstraints hgrow="NEVER"/>
    </columnConstraints>

    <TextField onAction="#onSearchButtonClick" GridPane.columnIndex="0" promptText="%SearchBar_Search"  fx:id="searchTextField" maxWidth="Infinity"/>
    <Button GridPane.columnIndex="1" onAction="#onSearchButtonClick" text="%SearchBar_Search" maxWidth="Infinity"/>

</GridPane>
